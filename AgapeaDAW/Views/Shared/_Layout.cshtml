@using AgapeaDAW.Models.Interfaces
@using System.Text.Json


@inject IBDAccess _servicioBD
@{
    List<Categoria> _listacats = _servicioBD.RecuperaCategorias("Raiz");

    String _jsonCliente = Context.Session.GetString("datoscliente") ?? "";

    Cliente? _cliente = !String.IsNullOrEmpty(_jsonCliente) ? JsonSerializer.Deserialize<Cliente>(_jsonCliente) : null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgapeaDAW</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AgapeaDAW.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/59d12739b5.js" crossorigin="anonymous"></script>
    <style>
        .bg-negro {
            background-color: #2c2c2c;
        }
    </style>

    <!-- jquewry libreria descomprimida-->
    <script src="https://code.jquery.com/jquery-3.6.1.js" integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI=" crossorigin="anonymous"></script>
</head>
<body>
    <header id="header">
        <div class="container-lg w-100 m-0 p-0">
            <div class="row w-100">
                <div class="col-12">

                    <div class="bg-negro m-0 p-0 vw-100">
                        <div class="row px-2" style="margin-left: 8%;margin-right: 8% ">
                            <!-- botones de contacto y login/acceso a panel de usuario si esta usuario logueado -->
                            <div class="col-7"></div>
                            <div class="col-4 text-end pe-5">

                                <!-- link acceso al panel Cliente o login en funcion si se le pasa desde el controlador variable de sesion a la vista...-->
                                <div class="btn-group btn-group-sm text-end" role="group" aria-label="Basic example">
                                    <a href="#" class="btn btn-negro btn-sm p-0 pe-3">
                                        <img src="~/images/botonMINIcontacto.png">
                                    </a>
                                    <!-- si hay un objeto sesion CLIENTE muestro el boton con su email y nombre y apellidos para q acceda a su PANEL, sino al LOGIN-->
                                    @if (_cliente != null)
                                    {
                                        <a asp-controller="Cliente" asp-action="InicioPanel" class="btn bg-negro text-white btn-sm p-0">
                                            <!-- Bienvenido: (arroba)_cliente.Nombre,(arroba)_cliente.Apellidos -->@_cliente.Credenciales.Email <a class="ps-1" href="https://localhost:7179/Cliente/Panel/InicioPanel"><img src="~/images/botonMINIlogout.png" /></a>
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-controller="Cliente" asp-action="Login" class="btn bg-negro btn-sm p-0">
                                            <img src="~/images/botonMINIlogin.png">
                                        </a>
                                    }
                                </div>
                            </div>
                            <div class="col-1"></div>
                        </div>
                    </div>

                    <nav class="bg-light vw-100 m-0 border border-bottom-2">
                        <div class="row p-2" style="margin-left: 8%;margin-right: 8% ">
                            <!-- Mi cuenta -->
                            <div class="col-3 d-flex align-content-center justify-content-center" style="padding-left: 5%">
                                <a class="p-1" asp-controller="Tienda" asp-action="RecuperaLibros">
                                    <img src="~/images/agapea-logo.png" alt="" width="auto" height="45" />
                                </a>
                            </div>
                            <div class="col-5 d-flex justify-content-center">
                                <form class="w-75" asp-controller="Tienda" asp-action="BuscarLibros" method="post">
                                    <div class="w-100">
                                        <div class="bg-gray border border-5 border h-100 d-flex flex-r">
                                            <div class="p-1 flex-fill">
                                                <input class="border-0 w-100 h-100" type="text" name="cajatext" placeholder="Buscar por libro, autor, ISBN...">
                                            </div>
                                            <div class="bg-primary p-2 border border-5 border-end-0 border-top-0 border-bottom-0 text-center" style="width: 10%">
                                                <a id="botonBuscar" onclick="javascript:document.forms[0].submit()"><img src="~/images/lupa.png" width="auto" height="20" /></a>
                                            </div>
                                        </div>
                                        <!--
                                                    <div class="input-group mb-3">
                                                <div class="form-check-inline">
                                                    <label class="form-check-label">
                                                        <input type="radio" class="form-check-input" name="optradio" value="Titulo">Titulo
                                                    </label>
                                                </div>
                                                <div class="form-check-inline">
                                                    <label class="form-check-label">
                                                        <input type="radio" class="form-check-input" name="optradio" value="Autor">Autor
                                                    </label>
                                                </div>
                                                <div class="form-check-inline">
                                                    <label class="form-check-label">
                                                        <input type="radio" class="form-check-input" name="optradio" value="Editorial">Editorial
                                                    </label>
                                                </div>
                                                <div class="form-check-inline">
                                                    <label class="form-check-label">
                                                        <input type="radio" class="form-check-input" name="optradio" value="ISBN10">ISBN
                                                    </label>
                                                </div>
                                            </div>
                                        -->
                                    </div>
                                </form>
                            </div>
                            <div class="col-4 p-0 pe-5 d-flex justify-content-center">
                                <div class="h-100">
                                    <!-- mini carrito -->
                                    <a asp-action="MostrarPedido" asp-controller="Pedido" class="d-flex flex-row align-items-center h-100 bg-white border border-1 btn btn-light p-1">
                                        <div class="position-relative mx-2">
                                            <!--<img src="~/images/boton_mini_carrito.png" />--><i class="fa-solid fa-cart-shopping fa-xl"></i>
                                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                                @if (_cliente != null)
                                                {
                                                    <span>@_cliente.PedidoActual.ElementosPedido.Count</span>
                                                }
                                                else 
                                                {
                                                    <span>0</span>
                                                }
                                                <span class="visually-hidden">unread messages</span>
                                            </span>
                                        </div>
                                        @if (_cliente != null)
                                        {
                                            <span class="ps-2 pe-1"> <small>Total:</small> <span class="text-end" id="precioCarrito" style="width: 110px; font-size: 1.5em"><strong>@_cliente.PedidoActual.TotalPedido €</strong></span></span>
                                        }
                                        else
                                        {
                                            <span class="ps-2 pe-1"> <small>Total:</small> <span class="text-end" id="precioCarrito" style="width: 110px; font-size: 1.5em"><strong>0.00€</strong></span></span>

                                        }

                                        <img class="align-content-lg-center mx-2" src="~/images/boton_flecha_minicarrito.png" />
                                    </a>
                                </div>
                            </div>
                        </div>
                    </nav>

                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="row">

            @if (Context.Request.Path.ToString().Contains("/Tienda"))
            {

                <div class="col-3 border border-bottom-0 border-top-0 border-start-0 border-end-1 border-dark">
                    <!--panel de categorias raices-->
                    <h6 class="text-dark mt-4 ms-3">CATEGORÍAS</h6>
                    @if (_listacats.Count != 0)
                    {
                        <div class="list-group">
                            @foreach (Categoria cat in _listacats)
                            {
                                <a href="https://localhost:7179/Tienda/RecuperaLibros/@cat.IdCategoria" class="list-group-item list-group-item-action border border-end-0 border-start-0 text-dark">@cat.NombreCategoria</a>
                            }
                        </div>
                    }
                </div>
                <div class="col-9 mt-4">
                    <div class="container">
                        <div class="row">
                            <img src="~/images/banner-envios-gratis.PNG" />
                        </div>
                        @RenderBody()
                    </div>
                </div>
            }
            else
            {
                @if (System.Text.RegularExpressions.Regex.IsMatch("/Cliente/Panel/.*", Context.Request.Path.ToString()) && _cliente != null)
                {
                    <div class="col-3 border-1">
                        <h6 class="text-dark mt-4 ms-3">PANEL PERSONAL DEL CLIENTE</h6>
                        <div class="containter">
                            <div class="row">
                                <!-- fila con imagen cliente y nombre y email de bienvenida-->
                                <div class="col">
                                    <img src="@_cliente.Credenciales.ImagenCuentaBASE64" height="115" width="86" />

                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <p>Bienvenido @_cliente.Nombre @_cliente.Apellidos (@_cliente.Credenciales.Email)</p>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col">
                                    <div class="list-group">
                                        @foreach (String opcion in new List<String> { "Inicio Panel", "Mis Compras", "Mis Opiniones", "Mis Listas" })
                                        {
                                            <a href="https://localhost:7179/Cliente/Panel/@opcion.Replace(" ","")" class="list-group-item list-group-item-action border border-end-0 border-start-0 text-dark">
                                                @opcion
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-8 mt-4">
                        <div class="container">
                            @RenderBody()
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-12 mt-4">
                        <div class="container">
                            @RenderBody()
                        </div>
                    </div>
                }
            }

        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - AgapeaDAW - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!--<script src="~/lib/jquery/dist/jquery.min.js"></script>-->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
